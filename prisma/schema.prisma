// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int     @default(autoincrement()) @id
  email     String  
  name      String
  password  String
  Companies Companies[]
}

model Companies {
  id        Int      @default(autoincrement()) @id
  name      String
  website   String
  cnpj      String
  locations Locations[]
}

model Locations {
  id        Int      @default(autoincrement()) @id
  name      String
  zipcode   String
  street    String
  number    String
  district  String
  city      String
  state     String
  
}